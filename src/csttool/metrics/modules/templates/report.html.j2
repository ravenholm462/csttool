{# CST Analysis Report Template #}
{# Uses Jinja2 templating with raw data passed from Python #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CST Analysis Report</title>
    <style>{{ css }}</style>
</head>

<body>
    <div class="page-container">
        {# ===== Header ===== #}
        <header class="header">
            <h1>CST Analysis Report</h1>
            <div class="meta">
                Subject: <strong>{{ subject_id }}</strong> |
                Date: <strong>{{ date }}</strong> |
                csttool <strong>v{{ version }}</strong> |
                <span class="extraction-badge">Metrics Extracted In: {{ space }}</span>
            </div>
        </header>


        {# ===== Acquisition & Processing Parameters ===== #}
        <div class="params-row">
            <div class="param-box">
                <h3>Acquisition Parameters</h3>
                <div class="param-grid">
                    <span class="param-label">Field Strength:</span>
                    <span class="param-value">
                        {% if acquisition.field_strength_T %}
                            {{ "%.1f"|format(acquisition.field_strength_T) }} T
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                    <span class="param-label">Echo Time:</span>
                    <span class="param-value">
                        {% if acquisition.echo_time_ms %}
                            {{ "%.1f"|format(acquisition.echo_time_ms) }} ms
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                    <span class="param-label">Max b-value:</span>
                    <span class="param-value">
                        {% if acquisition.b_values %}
                            {{ acquisition.b_values[-1] }} s/mm²
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                    <span class="param-label">Directions:</span>
                    <span class="param-value">{{ acquisition.n_directions | default('N/A') }}</span>
                    <span class="param-label">Resolution:</span>
                    <span class="param-value">
                        {% if acquisition.resolution_mm %}
                            {{ "%.1f"|format(acquisition.resolution_mm[0]) }}×{{ "%.1f"|format(acquisition.resolution_mm[1]) }}×{{ "%.1f"|format(acquisition.resolution_mm[2]) }} mm
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                </div>
            </div>
            <div class="param-box">
                <h3>Processing Parameters</h3>
                <div class="param-grid">
                    <span class="param-label">Denoising:</span>
                    <span class="param-value">
                        {% if processing.preprocessing %}
                            {{ processing.preprocessing.method | default('External') }}
                        {% else %}
                            External
                        {% endif %}
                    </span>
                    <span class="param-label">Motion Correction:</span>
                    <span class="param-value">
                        {% if processing.preprocessing and processing.preprocessing.motion_correction %}
                            Yes
                        {% else %}
                            No
                        {% endif %}
                    </span>
                    <span class="param-label">Tracking Method:</span>
                    <span class="param-value">{{ processing.tracking_method | default('Deterministic (CSA)') }}</span>
                    <span class="param-label">FA Threshold:</span>
                    <span class="param-value">{{ processing.tracking_params.fa_thresh if processing.tracking_params else 'N/A' }}</span>
                    <span class="param-label">Angle Threshold:</span>
                    <span class="param-value">
                        {% if processing.tracking_params and processing.tracking_params.angle_threshold %}
                            {{ processing.tracking_params.angle_threshold }}°
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                    <span class="param-label">Step Size:</span>
                    <span class="param-value">
                        {% if processing.tracking_params and processing.tracking_params.step_size %}
                            {{ processing.tracking_params.step_size }} mm
                        {% else %}
                            N/A
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>


        {# ===== Metrics Table ===== #}
        <div class="metrics-section">
            <table class="metrics-table">
                <thead>
                    <tr>
                        <th style="width: 40%;">Metric</th>
                        <th style="width: 20%;">Left</th>
                        <th style="width: 20%;">Right</th>
                        <th style="width: 20%;">LI</th>
                    </tr>
                </thead>
                <tbody>
                {% for m in metrics %}
                    <tr>
                        <td>{{ m.label }}</td>
                        <td>{{ m.left }}</td>
                        <td>{{ m.right }}</td>
                        <td class="{{ 'li-positive' if m.li > 0 else 'li-negative' }}">
                            {%- if m.li > 0 %}+{% endif %}{{ "%.3f" | format(m.li) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="legend">
                Legend: <span class="left-gt">Left&gt;Right</span>, <span class="right-gt">Right&gt;Left</span>
            </div>
        </div>

        {# ===== Visualizations ===== #}
        <div class="viz-section">
            {# Left column: Along-Tract Profiles #}
            <div class="profiles-column">
            {% if viz.stacked_profiles %}
                <div class="stacked-profiles">
                    <h4>Along-Tract Profiles</h4>
                    <img src="{{ viz.stacked_profiles }}" alt="Stacked Profiles">
                </div>
            {% else %}
                {% for profile in viz.profiles %}
                <div class="profile-plot">
                    <h4>{{ profile.title }}</h4>
                    {% if profile.data %}
                    <img src="{{ profile.data }}" alt="{{ profile.title }}">
                    {% else %}
                    <div class="profile-placeholder">[{{ profile.title }} Plot]</div>
                    {% endif %}
                </div>
                {% endfor %}
            {% endif %}
            </div>

            {# Right column: Tractograms #}
            <div class="tractogram-column">
            {% for tract in viz.tractograms %}
                <div class="tractogram-item">
                    <h4>{{ tract.title }}</h4>
                    {% if tract.data %}
                    <img src="{{ tract.data }}" alt="{{ tract.title }}">
                    {% else %}
                    <div class="tractogram-placeholder">[{{ tract.title }} View]</div>
                    {% endif %}
                </div>
            {% endfor %}
            </div>
        </div>

        {# ===== Footer ===== #}
        <footer class="footer">
            Method: Deterministic tractography, DTI model | Generated by csttool
        </footer>
    </div>
</body>
</html>
