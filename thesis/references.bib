	journal = {Magnetic Resonance in Medicine},
	author = {Wade, Ryckie G. and Tam, Winnie and Perumal, Antonia and Pepple, Sophanit and Griffiths, Timothy T. and Flather, Robert and Haroon, Hamied A. and Shelley, David and Plein, Sven and Bourke, Grainne and Teh, Irvin},
